<%- |
  # These should be pre-quoted by the caller with shell_escape()
  Array[String[1]] $paths,
  String[1] $rustup_home,
  String[1] $cargo_home,
| -%>
# Generated by Puppet. Changes will be overwritten.
export RUSTUP_HOME=<%= $rustup_home %>
export CARGO_HOME=<%= $cargo_home -%>

<%- $paths.reverse().each |$bin| { %>
# Only add <%= $bin %> to PATH once
case ":${PATH}:" in
  *:<%= $bin %>:*) ;;
  *) export PATH=<%= $bin %>:"$PATH" ;;
esac
<% } -%>
